---
import Navigation from "./Navigation.astro";

const { bgColor, fullScreen } = Astro.props;
---
<!-- Inspiration 

Capsulin
https://aluminium.index.studio/

Infraredmindbody
https://web.archive.org/web/20220927071547/https://infraredmindbody.com/about-us

-->
<div class="w-screen h-screen flex">
  <div class=`flex flex-col bg-[${bgColor}] w-screen lg:w-1/2 min-h-screen`>
    <div class="">
      <Navigation />
    </div>
    <div class="flex h-full w-full overflow-hidden">
      <slot />
    </div>
  </div>
  <div
  id="side"
    class="z-10 w-1/2 bg-cover bg-no-repeat bg-red-arm lg:flex 2xl:bg-repeat 2xl:bg-auto hidden"
  >
  </div>

  <style is:global>
    @font-face {
      font-family: "RecifeDisplay-Regular";
      src: url("/fonts/RecifeDisplay-Regular.woff2") format("woff2");
      font-weight: normal;
      font-style: normal;
      font-display: swap;
    }

    @font-face {
      font-family: "JetBrainsMono-Medium";
      src: url("/fonts/JetBrainsMono-Medium.woff2") format("woff2");
      font-weight: normal;
      font-style: normal;
      font-display: swap;
    }

    #side {
      background-image: url(images/redarm.jpg);
    }
  </style>

  <!-- bg-[#da3931]  -->
</div>
